<Window x:Class="NBank.Ledger.AccountLedgerList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBank.Ledger"
        mc:Ignorable="d"
        x:Name="frmAccountLedger"
        Loaded="frmAccountLedger_Loaded"
          WindowStartupLocation="CenterScreen"
        Title="MainWindow"  Height="600" 
        
        Width="520" 
        MaxHeight="600"
        Background="#fbf6db"
         WindowStyle="None"
        >
    <Window.Resources>
          <Style x:Key="StyleComboBox" TargetType="ComboBox">
            <Setter Property="Width" Value="200" />
        </Style>

    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Firts Columns-->
        <Grid Grid.Row="0" Grid.Column="0" Style="{StaticResource StyleGridFormTitle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="auto"></ColumnDefinition>
                <ColumnDefinition  Width="*"></ColumnDefinition>
                <ColumnDefinition  Width="auto"></ColumnDefinition>
                <ColumnDefinition  Width="5"></ColumnDefinition>
                <ColumnDefinition  Width="auto"></ColumnDefinition>
                <ColumnDefinition  Width="5"></ColumnDefinition>
                <ColumnDefinition  Width="auto"></ColumnDefinition>
                <ColumnDefinition  Width="5"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Account List" Style="{StaticResource FormTitle}"></Label>

            <Button Grid.Row="0" Grid.Column="2"   Style="{StaticResource Min}" x:Name="btnControlMinimize" Click="btnControlMinimize_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/NBank;component/Images/icons8-Minimize Window-26.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="0" Grid.Column="4"    Style="{StaticResource Max}" x:Name="btnControlMaximize" Click="btnControlMaximize_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/NBank;component/Images/icons8-Maximize Window-26.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Row="0" Grid.Column="6"   Style="{StaticResource Close}" x:Name="btnControlClose"  Click="btnControlClose_Click" >
                <Button.Background>
                    <ImageBrush ImageSource="/NBank;component/Images/icons8-Close Window-26.png"/>
                </Button.Background>
            </Button>

        </Grid>
        <!--End Firts Columns-->

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Account Name:"></Label>
            <TextBox Grid.Row="0" Grid.Column="2" Text="" Style="{StaticResource StyleListTextBox}" x:Name="txtAccountName" TextChanged="txtAccountName_TextChanged" ></TextBox>
         
            <Button Grid.Row="0" Grid.Column="6" Content="_View" x:Name="btnView" Click="btnView_Click"  ></Button>
            <Button Grid.Row="0" Grid.Column="8" Content="_Close" x:Name="btnClose"  Click="btnClose_Click"  ></Button>

            <Label Grid.Row="2" Grid.Column="0" Content="Account SubName"></Label>
            <TextBox Grid.Row="2" Grid.Column="2" x:Name="txtAccountSubName" TextChanged="txtAccountSubName_TextChanged" ></TextBox>

            <Label Grid.Row="4" Grid.Column="0" Content="Account SubName"></Label>
            <ComboBox Grid.Row="4" Grid.Column="2" x:Name="cmbProjectName" Style="{StaticResource StyleComboBox}">

            </ComboBox>

        </Grid>

        <DataGrid Grid.Row="4" 
                  x:Name="gdAccountList" 
                  AutoGenerateColumns="False"   
                  SelectionMode="Single" 
                  SelectionUnit="FullRow" 
                  Width="auto" 
                  Height="auto" 
                  CanUserAddRows="false"
                  CanUserReorderColumns="False"
                  IsReadOnly="True" MouseDoubleClick="gdAccountList_MouseDoubleClick" 
                  >
            <!--<DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="gdAccountList_DoubleClick" />
                </Style>
            </DataGrid.ItemContainerStyle>-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Account Name" Binding="{Binding Path=AccountName}"  Width="*"/>
                <!--<DataGridTextColumn Header="Short Name" Binding="{Binding Path=AccountShortName}"/>-->
            </DataGrid.Columns>
        </DataGrid>

        <!--4th Row-->
        <Grid Grid.Column="0" Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StatusBar Grid.Row="0" Grid.Column="0" >
                <StatusBarItem>
                    <TextBlock Name="lblStatus" Text="" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>

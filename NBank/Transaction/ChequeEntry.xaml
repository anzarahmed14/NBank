<Window x:Class="NBank.Transaction.ChequeEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBank.Transaction"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Name="frmChequeEntry"
        Loaded="frmChequeEntry_Loaded"
       
        PreviewKeyUp="frmChequeEntry_PreviewKeyUp"
        PreviewKeyDown="frmChequeEntry_PreviewKeyDown"
        ResizeMode="NoResize"
        Title="ChequeEntry" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Height="auto" Width="auto">
    <Window.Resources>
        <Style x:Key="StyleDatePicker" TargetType="DatePicker">
            <Setter Property="SelectedDate" Value="{x:Static sys:DateTime.Now}" />
            <Setter Property="SelectedDateFormat" Value="Short"></Setter>

        </Style>
        <Style x:Key="StyleTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="300" />
            <Setter Property="MaxLines" Value="1" />

        </Style>
        <Style x:Key="StyleTextBoxMaxlength100" BasedOn="{StaticResource StyleTextBox}" TargetType="TextBox">
            <Setter Property="MaxLength" Value="100"></Setter>
        </Style>
        <Style x:Key="StyleTextBoxMaxlength20" BasedOn="{StaticResource StyleTextBox}" TargetType="TextBox">
            <Setter Property="MaxLength" Value="20"></Setter>
        </Style>



        <Style x:Key="StyleComboBox" TargetType="ComboBox">
            <Setter Property="Width" Value="200" />
        </Style>

    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <!--Firts Row-->
        <Label Grid.Row="0" Grid.Column="0" Content="Entry Date:" x:Name="lblChequeEntryDate"></Label>
        <DatePicker Grid.Row="0" Grid.Column="2" x:Name="dtpChequeEntryDate"    Style="{StaticResource StyleDatePicker}"></DatePicker>
        <Label Grid.Row="0" Grid.Column="4" Content="Company Name:" x:Name="lblCompanyName"></Label>
        <ComboBox Grid.Row="0" Grid.Column="6" x:Name="cmbCompanyName" Style="{StaticResource StyleComboBox}" SelectionChanged="cmbCompanyName_SelectionChanged" >
        </ComboBox>
        <Label Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="3" Content=""  x:Name="lblSelectedCompanyName"></Label>

        <!--2nd Row-->
        <Label Grid.Row="2" Grid.Column="0" Content="Project:" x:Name="lblProject"></Label>
        <ComboBox Grid.Row="2" Grid.Column="2" x:Name="cmbProjectName" Style="{StaticResource StyleComboBox}">

        </ComboBox>

        <Label Grid.Row="2" Grid.Column="4" Content="I/D:" x:Name="lblIssueDeposit"></Label>
        <ComboBox Grid.Row="2" Grid.Column="6" x:Name="cmbChequeTypeName" Style="{StaticResource StyleComboBox}"  SelectionChanged="cmbChequeTypeName_SelectionChanged">

        </ComboBox>
        <!--3rd Row-->
        <Label Grid.Row="4" Grid.Column="0" Content="Party Name:" x:Name="lblPartyName"></Label>
        <TextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="5" Text="" Padding="5" x:Name="txtPartyName"  MaxLength="500" Width="510" KeyDown="txtPartyName_KeyDown" PreviewKeyDown="txtPartyName_PreviewKeyDown" PreviewGotKeyboardFocus="txtPartyName_PreviewGotKeyboardFocus"></TextBox>
        <TextBox Grid.Row="4" Grid.Column="8" Grid.ColumnSpan="3" Text="" MaxLength="500" Width="270" x:Name="txtAccountSubName"></TextBox>
        <!--4th Row-->
        <Label Grid.Row="6" Grid.Column="0" Content="Bank Name:" x:Name="lblBankName"></Label>
        <ComboBox Grid.Row="6" Grid.Column="2" x:Name="cmbBankName" PreviewKeyDown="cmbBankName_PreviewKeyDown" Style="{StaticResource StyleComboBox}" SelectionChanged="cmbBankName_SelectionChanged" >

        </ComboBox>

        <Label Grid.Row="6" Grid.Column="4" Content="Cheque No.:" x:Name="lblChequeNo"></Label>
        <TextBox Grid.Row="6" Grid.Column="6" Text="" x:Name="txtChequeNo"></TextBox>

        <Label Grid.Row="6" Grid.Column="8" Content="Status.:" x:Name="lblChequeStatus"></Label>
        <ComboBox Grid.Row="6" Grid.Column="10" x:Name="cmbChequeStatus">

        </ComboBox>
        <!--5th Row-->
        <Label Grid.Row="8" Grid.Column="0" Content="Cheque Amount:" x:Name="lblChequeAmount"></Label>
        <TextBox Grid.Row="8" Grid.Column="2" Text="" x:Name="txtChequeAmount" TextAlignment="Right" PreviewTextInput="txtChequeAmount_PreviewTextInput"></TextBox>

        <Label Grid.Row="8" Grid.Column="4" Content="TDS Amount:" x:Name="lblTDSAmount"></Label>
        <TextBox Grid.Row="8" Grid.Column="6" Text="" x:Name="txtChequeAmountTDS" TextAlignment="Right" PreviewTextInput="txtTDSAmount_PreviewTextInput"></TextBox>

        <Label Grid.Row="8" Grid.Column="8" Content="Parameter:" x:Name="lblParameter"></Label>
        <ComboBox Grid.Row="8" Grid.Column="10" x:Name="cmbParameter" Style="{StaticResource StyleComboBox}">

        </ComboBox>
        <!--6th Row-->
        <Label Grid.Row="10" Grid.Column="0" Content="Type:" x:Name="lblType"></Label>
        <ComboBox Grid.Row="10" Grid.Column="2" x:Name="cmbType">

        </ComboBox>

        <Label Grid.Row="10" Grid.Column="4" Content="Sub Type:" x:Name="lblSubType"></Label>
        <ComboBox Grid.Row="10" Grid.Column="6" x:Name="cmbSubType">

        </ComboBox>

        <!--7th Row-->
        <Label Grid.Row="12" Grid.Column="0" Content="Naration:" x:Name="lblNaration"></Label>
        <TextBox Grid.Row="12"  Grid.Column="2" Grid.ColumnSpan="5" MaxLength="500" Width="510" x:Name="txtNarration" ></TextBox>

        <!--7th Row-->
        <Label Grid.Row="14" Grid.Column="0" Content="ERP ID:" x:Name="lblERPID"></Label>
        <TextBox Grid.Row="14"  Grid.Column="2" Grid.ColumnSpan="5" MaxLength="500" Width="510" x:Name="txtERPID" ></TextBox>


        <!--8th Row-->
        <Label Grid.Row="16" Grid.Column="0" Content="Issue Date:" x:Name="lblIssueDate"></Label>
        <DatePicker Grid.Row="16" Grid.Column="2" x:Name="dtpChequeIssueDate" Style="{StaticResource StyleDatePicker}"   SelectedDateChanged="dtpChequeIssueDate_SelectedDateChanged"></DatePicker>

        <Button  ToolTip="Select Today Date"  Grid.Row="16" Grid.Column="3" x:Name="btnSelectTodayDate" Click="btnSelectTodayDate_Click" Grid.ColumnSpan="2" Height="26" Margin="6,0,0,4.4" Grid.RowSpan="2" VerticalAlignment="Bottom">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="../Images/icons8Today.png" HorizontalAlignment="Left"   Width="25" Height="25" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button  ToolTip="Clear Issue Date"  Grid.Row="16" Grid.Column="4" x:Name="btnClearIssueDate" Click="btnClearIssueDate_Click" Margin="40,0,0,0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="../Images/icons8close.png" HorizontalAlignment="Left"    Width="25" Height="25" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!--<Button   Grid.Row="14" Grid.Column="4" x:Name="btnSelectTodayDate" Click="btnSelectTodayDate_Click">
            <Image HorizontalAlignment="Left" Width="25" Height="25" Source="../Images/icons8Today.png"   Grid.Row="14" Grid.Column="4"></Image>    
        </Button>-->

        <!--9th Row-->
        <Label Grid.Row="18" Grid.Column="0" Content="Clearing Date:" x:Name="lblClearDate" ></Label>
        <DatePicker Grid.Row="18" Grid.Column="2"  x:Name="dtpChequeClearDate" Style="{StaticResource StyleDatePicker}" SelectedDateChanged="dtpChequeClearDate_SelectedDateChanged"></DatePicker>

        <Button  ToolTip="Select Today Date"  Grid.Row="18" Grid.Column="4" x:Name="btnClearDateSelectTodayDate" Click="btnClearDateSelectTodayDate_Click" >
            <Button.Template>
                <ControlTemplate>
                    <Image Source="../Images/icons8Today.png" HorizontalAlignment="Left"   Width="25" Height="25" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button  ToolTip="Clear Clearing  Date"  Grid.Row="18" Grid.Column="4" x:Name="btnClearClearDate" Click="btnClearClearDate_Click"  Margin="40,0,0,0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="../Images/icons8close.png" HorizontalAlignment="Left"    Width="25" Height="25" />
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Grid  Grid.Row="20"  Grid.ColumnSpan="11" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="2" x:Name="btnSave" Content="_Save"  Click="btnSave_Click" ></Button>
            <Button Grid.Row="0" Grid.Column="4" x:Name="btnPrint" Content="_Print" Click="btnPrint_Click"  ></Button>
            <Button Grid.Row="0" Grid.Column="6" x:Name="btnDelete" Content="_Delete" Click="btnDelete_Click" ></Button>
            <Button Grid.Row="0" Grid.Column="8" x:Name="btnClose" Content="_Close" Click="btnClose_Click" ></Button>
        </Grid>

        <!--11th Row-->
        <StatusBar Grid.Row="22" Grid.ColumnSpan="11">
            <StatusBarItem>
                <TextBlock Name="lblStatus" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

<Window x:Class="NBank.Transaction.ChequeClear"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBank.Transaction"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        x:Name="frmChequeClear"
        Loaded="frmChequeClear_Loaded"
        Title="Cheque Clear" WindowStartupLocation="CenterScreen"  Height="600"  Background="#fbf6db" 
        KeyDown="frmChequeClear_KeyDown"
        >
    <Window.Resources>
        <Style x:Key="StyleDatePicker" TargetType="DatePicker">
            <Setter Property="SelectedDate" Value="{x:Static sys:DateTime.Now}" />
            <Setter Property="SelectedDateFormat" Value="Short"></Setter>

        </Style>
        
        <Style x:Key="StyleComboBox" TargetType="ComboBox">
            <Setter Property="Width" Value="100" />
        </Style>
        <Style x:Key="StyleTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="130"></Setter>
            
        </Style>
       
       

        <!--Grid Text Box RightAligned-->
        <Style x:Key="RightAligned" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

       

    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Firts Row-->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>

                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>

                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>

                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <!--A-->
            <Label Grid.Row="0" Grid.Column="0" Content="Date Type:" ></Label>
            <ComboBox Grid.Row="0" Grid.Column="2" x:Name="cmbDateType">
               
            </ComboBox>

            <Label Grid.Row="0" Grid.Column="4" Content="From Date:"></Label>
            <DatePicker Grid.Row="0" Grid.Column="6"  x:Name="dtpStartDate" Style="{StaticResource StyleDatePicker}"  ></DatePicker>

            <Label Grid.Row="0" Grid.Column="8" Content="To Date:"></Label>
            <DatePicker Grid.Row="0" Grid.Column="10"  x:Name="dtpEndDate" Style="{StaticResource StyleDatePicker}"  ></DatePicker>

            <!--B-->
            <Label Grid.Row="2" Grid.Column="0" Content="Bank Name:" ></Label>
            <ComboBox Grid.Row="2" Grid.Column="2" x:Name="cmbBankName" Style="{StaticResource StyleComboBox}" />

            <Label Grid.Row="2" Grid.Column="4" x:Name="lblChequeNo" Content="Cheque No.:"></Label>
            <TextBox Grid.Row="2" Grid.Column="6" x:Name="txtChequeNo" Style="{StaticResource StyleTextBox}" ></TextBox>

            <Label Grid.Row="2" Grid.Column="8" Content="Cheque Status:"></Label>
            <ComboBox Grid.Row="2" Grid.Column="10" x:Name="cmbChequeStatus" ></ComboBox>

            <Button Grid.Row="2" Grid.Column="12" Content="_Search" x:Name="btnSearch" Click="btnSearch_Click"></Button>
            <Button Grid.Row="2" Grid.Column="14" Content="_Close" x:Name="btnClose" Click="btnClose_Click"></Button>



        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Row="0" Grid.Column="0"
                    x:Name="dgChequeClearList" 
                  AutoGenerateColumns="False"   
                  SelectionMode="Single" 
                  SelectionUnit="FullRow" 
                  Width="auto" 
                  Height="auto"
                  CanUserAddRows="false"
                  CanUserReorderColumns="False"
                  IsReadOnly="True"
                  PreviewKeyDown="dgChequeClearList_PreviewKeyDown"
                 SelectionChanged="dgChequeClearList_SelectionChanged"     
                 >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Entry Date"     Binding="{Binding ChequeEntryDate, StringFormat=\{0:dd/MM/yyyy\}}"     />
                    <DataGridTextColumn Header="Party Name"     Binding="{Binding Path=AccountName}" />
                    <DataGridTextColumn Header="I/D"            Binding="{Binding Path=ChequeTypeName}"  />
                    <DataGridTextColumn Header="Co."            Binding="{Binding Path=CompanyShortName}"  />
                    <DataGridTextColumn Header="ERP ID"         Binding="{Binding Path=ERPID}" Width="80" />
                    <DataGridTextColumn Header="Bank Name"      Binding="{Binding Path=BankName}"  />
                    <DataGridTextColumn Header="Chq. No."       Binding="{Binding Path=ChequeNo}"   />
                    <DataGridTextColumn Header="Proj."          Binding="{Binding Path=ProjectName}"   />
                    <DataGridTextColumn Header="St."            Binding="{Binding Path=ChequeStatusName}"  />
                    <DataGridTextColumn Header="Issue Dt."      Binding="{Binding ChequeIssueDate, StringFormat=\{0:dd/MM/yyyy\}}"  />
                    <DataGridTextColumn Header="Clrng.Dt."      Binding="{Binding ChequeClearDate, StringFormat=\{0:dd/MM/yyyy\}}"  />
                    <DataGridTextColumn Header="Amount"         Binding="{Binding Path=ChequeAmount}"   >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" x:Name="lblPartyName" Content="Party Name:"></Label>
                <Label Grid.Row="0" Grid.Column="2" x:Name="lblPartyNameValue" Style="{StaticResource StyleDisplayLabel}"></Label>

                <Label Grid.Row="2" Grid.Column="0" x:Name="lblNarration" Content="Narration:"></Label>
                <Label  Grid.Row="2" Grid.Column="2" Style="{StaticResource StyleDisplayLabel}">
                    <TextBlock x:Name="lblNarrationValue" TextWrapping="WrapWithOverflow" ></TextBlock>
                </Label> 
            </Grid>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" x:Name="lblType" Content="Type:" Width="72"></Label>
                <Label Grid.Row="0" Grid.Column="2" x:Name="lblTypeValue" Style="{StaticResource StyleDisplayLabelWith}"></Label>

                <Label Grid.Row="0" Grid.Column="4" x:Name="lblSubType" Content="SubType:"></Label>
                <Label Grid.Row="0" Grid.Column="6" x:Name="lblSubTypeValue" Style="{StaticResource StyleDisplayLabelWith}"></Label>

                <Label Grid.Row="0" Grid.Column="8" x:Name="lblParameter" Content="Parameter:"></Label>
                <Label Grid.Row="0" Grid.Column="10" x:Name="lblParameterValue" Style="{StaticResource StyleDisplayLabelWith}"></Label>

            </Grid>
        </Grid>

        <Grid Grid.Row="8" Grid.Column="0" >
            <StatusBar>
                <StatusBarItem>
                    <TextBlock Name="lblStatus" />
                </StatusBarItem>
            </StatusBar>
        </Grid>

    </Grid>
</Window>

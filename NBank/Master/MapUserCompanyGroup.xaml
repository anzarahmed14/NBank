<Window x:Class="NBank.Master.MapUserCompanyGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBank.Master"
        mc:Ignorable="d"
        Title="Map User Company Group"   WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Height="auto" Width="auto"
        x:Name="frmMapUserCompanyGroup"
        KeyDown="frmMapUserCompanyGroup_KeyDown"
        Loaded="Window_Loaded"
        >
    <Window.Resources>
        <Style x:Key="StyleNormalTextBoxWidth" TargetType="TextBox">
            <Setter Property="Width" Value="300" />
            <Setter Property="MaxLines" Value="1" />
        </Style>
        <Style x:Key="StyleTextBoxMaxlength100" BasedOn="{StaticResource StyleNormalTextBoxWidth}" TargetType="TextBox">
            <Setter Property="MaxLength" Value="100"></Setter>
        </Style>
        <Style x:Key="StyleTextBoxMaxlength20" BasedOn="{StaticResource StyleNormalTextBoxWidth}" TargetType="TextBox">
            <Setter Property="MaxLength" Value="20"></Setter>
        </Style>


    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- User  Dropdown -->
        <Label Grid.Row="0" Grid.Column="0" Content="User:"/>
        <ComboBox Grid.Row="0" Grid.Column="2"
                  x:Name="cmbUser"
                  Width="300"
                 DisplayMemberPath="UserName"
          SelectedValuePath="UserID"/>

        <!-- Company List -->
        <Label Grid.Row="2" Grid.Column="0" Content="Company Group:" VerticalAlignment="Top"/>

        <ListBox Grid.Row="4"
         Grid.Column="2"
         x:Name="lstCompanyGroup"
         BorderBrush="Gray"
         BorderThickness="1"
         ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Checkbox -->
                        <CheckBox Grid.Column="0"
                          Tag="{Binding CompanyGroupID}"
                          IsChecked="{Binding IsSelected, Mode=TwoWay}" />

                        <!-- Company Group Name -->
                        <TextBlock Grid.Column="1"
                           Text="{Binding CompanyGroupName}"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>

                        <!-- Companies (pipe separated) -->
                        <TextBlock Grid.Column="2"
                           Text="{Binding CompanyNames}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="Gray"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>


        <!-- Buttons -->
        <Grid Grid.Row="6" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    x:Name="btnSave"
                    Content="_Save"
                    Width="80"
                    Click="btnSave_Click"/>

            <Button Grid.Column="3"
                    x:Name="btnClose"
                    Content="_Close"
                    Width="80"
                    Click="btnClose_Click"/>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="8" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBlock Name="lblStatus"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
